<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>project_hotel</display-name>
    <servlet>
		<servlet-name>ControllerUsingURI</servlet-name>
		<servlet-class>com.khrd.controller.ControllerUsingURI</servlet-class>
		<init-param>
			<param-name>configFile</param-name>
			<param-value>/WEB-INF/commandHandler.properties</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>ControllerUsingURI</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>DBCPInit</servlet-name>
		<servlet-class>com.khrd.jdbc.DBCPInit</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<!-- filter -->
	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>com.khrd.util.CharacterEncodingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>LoginCheckFilter</filter-name>
		<filter-class>com.khrd.util.LoginCheckFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginCheckFilter</filter-name>
		<url-pattern>/rsv/rsvStep1.do</url-pattern>
		<url-pattern>/rsv/rsvStep2.do</url-pattern>
		<url-pattern>/rsv/rsvStep3.do</url-pattern>
		<url-pattern>/rsvMng/mem/list.do</url-pattern>
		<url-pattern>/rsvMng/mem/detail.do</url-pattern>
		<url-pattern>/rsvMng/mem/deleteRsv.do</url-pattern>
		<url-pattern>/qb/list.do</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>LoginCheckFilterForAdmin</filter-name>
		<filter-class>com.khrd.util.LoginCheckFilterForAdmin</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginCheckFilterForAdmin</filter-name>
		<url-pattern>/intranet/main.do</url-pattern>
		<url-pattern>/intranet/member/list.do</url-pattern>
		<url-pattern>/intranet/rsv/list.do</url-pattern>
	</filter-mapping>
    
    <!-- error-page -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/views/error/errorPage.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/view/error/errorPage.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/view/error/errorPage.jsp</location>
    </error-page>
    <error-page>
        <error-code>503</error-code>
        <location>/WEB-INF/view/error/errorPage.jsp</location>
    </error-page>
    <error-page>
        <error-code>400</error-code>
        <location>/WEB-INF/view/error/errorPage.jsp</location>
    </error-page>
    <error-page>
        <error-code>405</error-code>
        <location>/WEB-INF/view/error/errorPage.jsp</location>
    </error-page>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>